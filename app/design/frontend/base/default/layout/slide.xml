<?xml version="1.0"?>
<layout version="0.1.0">
    <cms_index_index translate="label"><!-- layout handle for the homepage -->
        <reference name="content">
            <block type="slide/slide" name="slide_index" before="content" template="slide/index.phtml"/>
        </reference>
    </cms_index_index>

    <!--show catalog-->

    <catalog_category_layered translate="label">
        <reference name="content">
            <block type="core/template" name="slide" before="-" template="slide/catelogy.phtml"/>
        </reference>
    </catalog_category_layered>

    <!--Show Product-->

    <catalog_product_view>
        <reference name="content">
            <block type="slide/slide" name="slide" before="-" template="slide/product.phtml"/>
        </reference>
    </catalog_product_view>
</layout>
